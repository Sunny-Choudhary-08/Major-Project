<% layout('/layouts/boilerplate') -%>

<body>

  <div class="row mt-3">
<div class="col-8 offset-2" >
  <br><br>
  <h3>Create a new listing</h3>
  <form action="/listings" method="post">
    <div class="mb-3">
      <lable for="title" class="form-lable">Enter Title</lable>
      <input
        type="text"
        name="listing[title]"
        placeholder="Add a catchy title"
        class="form-control"
      />
    </div>

    <div class="mb-3">
      <lable for="Description" class="form-lable">Description</lable>
      <textarea name="listing[description]" class="form-control">Enter description</textarea>
    </div>

    <div class="mb-3">  
      <lable for="image" class="form-lable">Image Link</lable>
      <input
      type="texy"
      name="listing[image]"
      placeholder="Enter image URL/Link"
      class="form-control"
    /> </div>
   
    <div class="row">
      <div class="mb-3 col-md-4">
        <lable for="number" class="form-lable">Enter Price</lable>
        <input type="number" name="listing[price]" placeholder="1200"  class="form-control"/>
        </div>
    
        <div class="mb-3 col-md-8">
          <lable for="text" class="form-lable">Enter Country</lable>
          <input type="text" name="listing[country]" placeholder="India" class="form-control" />
          </div>  
    </div>
    
   
    <div class="mb-3">
      <lable for="text" class="form-lable">Enter Location</lable>
      <input type="text" name="listing[location]" placeholder="Delhi" class="form-control" />
    </div>
   
   
   
   
    <button class="btn btn-dark add-btn mt-3">Add</button>
    <br><br>
  </form>
</div>
</div>


</body>
